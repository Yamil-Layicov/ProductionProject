{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["./src/shared/*"],
      "app/*": ["./src/app/*"],
      "pages/*": ["./src/pages/*"],
      "widgets/*": ["./src/widgets/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./src/**/*",
    "./config/jest/setupTests.ts"
  ],
}
